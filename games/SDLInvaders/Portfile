                        port:libsdl_image \
                        port:libsdl_mixer

configure.args          --disable-sdltest

post-destroot {
    file attributes ${destroot}${prefix}/share/SDLInvaders/highscores -permissions +w
}

app.identifier          net.sourceforge.sdlinvaders.${app.name}
