# -*- coding: utf-8; mode: _tcl; tab-width: 2; indent-tabs-mode: nil; c-basic-offset: 2 -*- vim:fenc=utf-8:ft=portfile:sw=2:ts=2:sts=2

PortSystem          1.0
PortGroup           github 1.0

github.setup        radare radare2 2.3.0
categories          devel
platforms           darwin
license             LGPL-3+
maintainers         {g5pw @g5pw} openmaintainer
description         Opensource tools to disasm, debug, analyze and manipulate binary files.
long_description    ${name} provides ${description}.
homepage            http://radare.org

depends_lib         port:capstone \
                    port:zlib \
                    port:libzip

checksums           rmd160  18bc72880fe3c8e83d5cfe0b268cfac491470fa2 \
sha256  62e4a8c8758e21d6e502bc8f45e15dec5256bf8c724bbc4aa63c75dbdc1c9cfe

configure.args-append \
                    --with-syscapstone \
                    --with-syszip \
                    --with-compiler=clang

build.env-append    HOST_CC=${configure.cc}

variant openssl description {Use OpenSSL library} {
    depends_lib-append \
                    path:lib/libssl.dylib:openssl

    configure.args-append \
                    --with-openssl
}

default_variants    +openssl
