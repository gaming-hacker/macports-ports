PortSystem          1.0
PortGroup           python 1.0
PortGroup   user 1.0
name                py-llvmlite
version             0.22.0
revision            0
categories-append   devel science
platforms           darwin
license             BSD

python.versions     27 36

maintainers         stromnov openmaintainer

description         A lightweight LLVM python binding for writing JIT compilers
long_description    ${description}

homepage            http://llvmlite.pydata.org/
master_sites        pypi:[string index ${python.rootname} 0]/${python.rootname}

distname            ${python.rootname}-${version}

checksums           rmd160  43fdf0fe29c8d6c516a26d00f77e66f475c934b7 \
                    sha256  a0a875f3d502f41f4a24444aa98fbf076a6bf36e2a0b3b4481b22e1c4a3acdc2

if {${name} ne ${subport}} {
    patchfiles-append   patch-ffi_Makefile.osx.diff

    post-patch {
        reinplace "s|%%CXX%%|clang++-mp-6.0|" ${worksrcpath}/ffi/Makefile.osx
    }

    depends_build-append \
                        port:py${python.version}-setuptools \
                        port:clang-${user.ver.clang}

    depends_lib-append  port:llvm-${user.ver.clang}

    if {${python.version} < 34} {
        depends_lib-append  port:py${python.version}-enum34
    }

    build.env-append    LLVM_CONFIG=llvm-config-mp-${user.ver.clang}
    destroot.env-append LLVM_CONFIG=llvm-config-mp-${user.ver.clang}

    livecheck.type      none
}
