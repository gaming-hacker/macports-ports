if {${name} ne ${subport}} {
    depends_build   port:py${python.version}-setuptools
    livecheck.type  none
} else {
    livecheck.type  regex
    livecheck.url   https://pypi.python.org/pypi/clonedigger
    livecheck.regex clonedigger-(.+?)${extract.suffix}
