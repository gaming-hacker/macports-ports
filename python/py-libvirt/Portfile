size    190016

python.default_version  27
python.versions 27 36 37


if {${name} ne ${subport}} {
    depends_build       port:py${python.version}-setuptools \
                        port:pkgconfig
    depends_lib         port:libvirt

    livecheck.type  none
} else {
    livecheck.name  ${python.rootname}-python
    livecheck.type  pypi
}
