# -*- coding: utf-8; mode: _tcl; tab-width: 2; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=2:ts=2:sts=2

PortSystem          1.0
PortGroup           kde4   1.1

name                kdeedu4
version             4.14.3
categories          kde kde4
license             Permissive
maintainers         nicos
description         Education based applications for the KDE4 platform
long_description    ${description}. This includes programs such as Marble and Kalzium.
platforms           darwin
homepage            https://www.kde.org


distfiles
use_configure       no
extract {           file mkdir ${worksrcpath}/${name} }
build               {}


depends_lib-append  port:libkdeedu\
                    port:blinken\
                    port:cantor\
                    port:kalgebra\
                    port:kalzium\
                    port:kanagram\
                    port:kbruch\
                    port:kgeography\
                    port:khangman\
                    port:kig\
                    port:kiten\
                    port:klettres\
                    port:kmplot\
                    port:kstars\
                    port:ktouch\
                    port:kturtle\
                    port:kwordquiz\
                    port:marble\
                    port:parley\
                    port:pairs \
                    port:rocs \
                    port:step

destroot {
   # Create a dummy file so the port can be successfully activated
   xinstall -d ${destroot}${prefix}/share/doc/kdeedu4
   set docfile [open ${destroot}${prefix}/share/doc/kdeedu4/README.${name}.txt "w"]
   puts $docfile "Meta-port for kdeedu4\n"
   puts $docfile "${long_description}\n"
   close $docfile
}

livecheck.type      none
