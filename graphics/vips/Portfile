PortSystem          1.0
PortGroup           github 1.0
PortGroup           gobject_introspection 1.0

github.setup        libvips libvips 8.7.1 v
name                vips
distname            vips-${version}
description         VIPS is an image processing library.
long_description    VIPS is an image processing library. It is good for \
                    large images and for colour.
maintainers         {bgilbert @bgilbert} {gmail.com:jcupitt @jcupitt}
categories          graphics
platforms           darwin
license             LGPL-2.1+
homepage            https://libvips.github.io/libvips/
github.tarball_from releases

checksums           rmd160  aef3ff2e8b954507af6ce0f38735b5da19049474 \
sha256  1ab080fc7970e6f0a16b1499e44628ea55f80d34c991f5c015d21ede2e486bf0

depends_build       port:gtk-doc \
                    port:pkgconfig

depends_lib         path:lib/pkgconfig/glib-2.0.pc:glib2 \
                    path:lib/pkgconfig/pango.pc:pango \
                    port:cfitsio \
                    port:expat \
                    port:fftw-3 \
