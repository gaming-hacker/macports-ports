#                     size    695660

depends_build-append \
                    port:coreutils
depends_lib-append  port:bzip2 \
                    port:zlib

configure.args-append \
                    -DENABLE_COMMONCRYPTO:Bool=OFF \
                    -DENABLE_GNUTLS:Bool=OFF \
                    -DENABLE_OPENSSL:Bool=OFF

test.run            yes
test.target         check

livecheck.type      regex
livecheck.regex     ${name}-(\[0-9.\]+)\\.tar
